<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">

    <title>Celtel-Home</title>
</head>

<body>
    <!-- header -->
    <nav class="navbar navbar-light-new bg-light">
        <h3>Celtel</h3>

        <form class="form-inline mx-auto" id="pp" style="border: 1px solid #DDD">
            <i class="fa-solid fa-magnifying-glass svgSearch"></i><input class="form-control mr-sm-2" type="search"
                placeholder="Search" aria-label="Search" style="border: none;">
        </form>
        <i class="fa-solid fa-bell bellIcon"></i>
    </nav>


    <!-- sidebar -->
    <div class="sidebar">
        <ul class="list-group" id="mylist">
            <li class="list-group-item myListItem"><i class="fa-solid fa-house svgLogo"></i> Home</li>
            <li class="list-group-item myListItem"><i class="fa-solid fa-user svgLogo"></i> Matches</li>
            <li class="list-group-item myListItem"> <i class="fa-solid fa-pager svgLogo"></i>Manges sources</li>
            <li class="list-group-item myListItem"><i class="fa-solid fa-pager svgLogo"></i>Intergration</li>
            <li class="list-group-item myListItem"><i class="fa-solid fa-pager svgLogo"></i>Alerts</li>
            <li class="settingList">
                <div class="btn-group">
                    <i class="fa-solid fa-gear settingIcon"></i>
                    <button type="button" class="btn">Action</button>
                    <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"
                        aria-expanded="false">
                        <span class="sr-only tt">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Setting 1</a>
                        <a class="dropdown-item" href="#">Setting 2</a>
                        <a class="dropdown-item" href="#">Setting 3</a>
                        <div class="dropdown-divider"></div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <!-- middle part -->
    <div class="middle">
        <h1>Customer Details</h1>
        <h2>The terms you are tracking</h2>
        <div class="mybutton">
            <button type="button" class="btn border border-dark"><i
                    class="fa-solid fa-bars ffIcon mybuttonLogo"></i>Filter</button>
            <button type="button" class="btn btn-warning addbutton" id="clickable"> <i
                    class="fa-solid fa-plus ffIcon mybuttonLogo"></i>Add</button>
        </div>

        <form action="/create-info" method="post" class="myform" id="nn1">
            <div class="form-group row">
                <label for="Username" class="col-sm-2 col-form-label mylable">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="staticEmail" name="username"
                        placeholder="Enter Your Username" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="E-mail" class="col-sm-2 col-form-label mylable">E-mail</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="staticEmail" name="email"
                        placeholder="Enter Your E-mail" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="Phone" class="col-sm-2 col-form-label mylable">Phone No.</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="staticEmail" name="phone"
                        placeholder="Enter Your Phone Number" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="Company" class="col-sm-2 col-form-label mylable">Company</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="staticEmail" required name="company"
                        placeholder="Enter Your Company Name">
                </div>
            </div>
            <button type="submit" id="mymy" class="btn btn-danger mybuttonSubmit">Add User</button>
        </form>


    </div>

    <div class="showInfo">
        <table class="table myItem">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Phone no</th>
                    <th scope="col">Company</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i of Info_list) { %>
                    <tr>
                        <td scope="row">
                            <%= i.username %>
                        </td>
                        <td>
                            <%= i.email %>
                        </td>
                        <td>
                            <%= i.phone %>
                        </td>
                        <td>
                            <%= i.company %>
                        </td>
                        <td>
                            <div class="delete-button answer">
                                <a href="/delete-info/?id=<%=i._id %>">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>







    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/3bc30c5c3b.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>

</body>

</html>